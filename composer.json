{
    "name": "thoughtco/statamic-ab-tester",
    "type": "statamic-addon",
    "description": "",
    "license": "MIT",
    "require": {
        "statamic/cms": "^5.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17"
    },
    "autoload": {
        "psr-4": {
            "Thoughtco\\StatamicABTester\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thoughtco\\StatamicABTester\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Aryeh Raber",
            "email": "aryeh.raber@gmail.com",
            "homepage": "https://aryeh.dev",
            "role": "Developer"
        },
        {
            "name": "Ryan Mitchell",
            "email": "ryan@thoughtcollective.com",
            "homepage": "https://www.thoughtcollective.com",
            "role": "Developer"
        }
    ],
    "extra": {
        "statamic": {
            "name": "A/B Tester",
            "description": "Run A/B Tests in your Statamic install",
            "version": "0.1"
        },
        "laravel": {
            "providers": [
                "Thoughtco\\StatamicABTester\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "orchestra/testbench": "^7.0 || ^8.0",
        "pestphp/pest": "^2.35"
    }
}
